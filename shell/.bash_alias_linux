#####################################################################
# SHELL ALIASES
#####################################################################

# Useful aliases
alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'
alias ports='netstat -tulanp'
alias find-quickly="find -not \( -path *node_modules* -o -path *bower* \) -name"
alias git-pull-all='ls -d -- */ | xargs -I {} git -C {} pull'
